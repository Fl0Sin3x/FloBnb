{% extends 'admin/base.html.twig' %}

{% block title %} Gestion des utilisateurs {% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5"> Gestion des r√©servations </h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Utilisateur</th>
                <th>email</th>
            </tr>
            </thead>
            <tbody>
            {% for user in paginator.data %}
                <tr>
                    <td class="align-middle">{{ user.id }}</td>
                    <td class="align-middle">{{ user.fullName }}</td>
                    <td class="align-middle">
                        <img src="{{ user.picture }}" alt="{{ user.fullName }}" class="avatar avatar-mini mr-2">
                    </td>
                    <td class="align-middle">{{ user.email}}</td>
                    <td class="align-middle">
                        <a href="{{ path('admin_user_delete', {'id': user.id}) }}"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ paginator.display() }}
    </div>
{% endblock %}